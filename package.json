{
  "private": true,
  "workspaces": {
    "packages": [
      "host",
      "container"
    ]
  },
  "scripts": {
    "start": "concurrently 'cd ./host && yarn start' 'cd ./container && yarn start'",
    "build": "concurrently 'cd ./host && yarn build' 'cd ./container && yarn build'",
    "serve": "concurrently 'cd ./host && yarn serve' 'cd ./container && yarn serve'",
    "clean": "concurrently 'cd ./host && yarn clean' 'cd ./container && yarn clean'  'rm -rf node_modules'"
  },
  "devDependencies": {
    "concurrently": "7.2.1"
  }
}
